# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to use dependency injection
#add products
POST   /products                    controllers.ProductController.addProduct

#get all products
GET    /products                    controllers.ProductController.getProduct        

#update by id
PUT     /products                    controllers.ProductController.updateProduct

#delete by id
DELETE /products                      controllers.ProductController.deleteProduct(id: String)

#GET    /product                    controllers.ProductController.getProductReview  # get product with its reviews
