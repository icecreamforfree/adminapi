# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to use dependency injection

#PRODUCT#
#add products
POST   /firestore/products                  controllers.FirestoreProductController.addProduct
POST   /psql/products                       controllers.PsqlProductController.addProduct

#get all products
GET    /firestore/products                   controllers.FirestoreProductController.getProduct        
GET    /psql/products                       controllers.PsqlProductController.getProduct        

#update by id
PUT     /firestore/products                 controllers.FirestoreProductController.updateProduct
PUT     /psql/products                      controllers.PsqlProductController.updateProduct

#delete by id
DELETE /firestore/products                 controllers.FirestoreProductController.deleteProduct(id: String)
DELETE /psql/products                      controllers.PsqlProductController.deleteProduct(id: String)

#get product review only
GET     /firestore/review                     controllers.FirestoreProductController.getReview(id: String)

#USERQUESTION#
#add user question
POST   /firestore/user_question                  controllers.FirestoreUserQuestionController.addQuestion
POST   /psql/user_question                       controllers.PsqlUserQuestionController.addQuestion

#get all user quesiton
GET    /firestore/user_question                   controllers.FirestoreUserQuestionController.getQuestion        
GET    /psql/user_question                       controllers.PsqlUserQuestionController.getQuestion        

#update by id
PUT     /firestore/user_question                 controllers.FirestoreUserQuestionController.updateQuestion
PUT     /psql/user_question                      controllers.PsqlUserQuestionController.updateQuestion

#delete by id
DELETE /firestore/user_question                 controllers.FirestoreUserQuestionController.deleteQuestion(id: String)
DELETE /psql/user_question                      controllers.PsqlUserQuestionController.deleteQuestion(id: String)

#REVIEWQUESTION#
#add review question
POST   /firestore/review_question                  controllers.FirestoreReviewQuestionController.addQuestion
POST   /psql/review_question                       controllers.PsqlReviewQuestionController.addQuestion

#get all review quesiton
GET    /firestore/review_question                   controllers.FirestoreReviewQuestionController.getQuestion        
GET    /psql/review_question                       controllers.PsqlReviewQuestionController.getQuestion        

#update by id
PUT     /firestore/review_question                 controllers.FirestoreReviewQuestionController.updateQuestion
PUT     /psql/review_question                      controllers.PsqlReviewQuestionController.updateQuestion

#delete by id
DELETE /firestore/review_question                 controllers.FirestoreReviewQuestionController.deleteQuestion(id: String)
DELETE /psql/review_question                      controllers.PsqlReviewQuestionController.deleteQuestion(id: String)

#INCENTIVE#
#add incentive
POST   /firestore/incentive                  controllers.FirestoreIncentiveController.addIncentive
POST   /psql/incentive                       controllers.PsqlIncentiveController.addIncentive

#get all incentive
GET    /firestore/incentive                   controllers.FirestoreIncentiveController.getIncentive       
GET    /psql/incentive                       controllers.PsqlIncentiveController.getIncentive       

#update by id
PUT     /firestore/incentive                 controllers.FirestoreIncentiveController.updateIncentive
PUT     /psql/incentive                      controllers.PsqlIncentiveController.updateIncentive

#delete by id
DELETE /firestore/incentive                 controllers.FirestoreIncentiveController.deleteIncentive(id: String)
DELETE /psql/incentive                      controllers.PsqlIncentiveController.deleteIncentive(id: String)


####################################################################################################################################
GET     /product                                controllers.ProductController.getProduct
DELETE /product                                controllers.ProductController.deleteProduct(id: String)
POST   /product                                 controllers.ProductController.addProduct
PUT   /product                                 controllers.ProductController.updateProduct

GET     /review                                controllers.ProductController.getReview(id: String)

GET     /incentive                                controllers.IncentiveController.getIncentive
DELETE /incentive                                controllers.IncentiveController.deleteIncentive(id: String)
POST   /incentive                                 controllers.IncentiveController.addIncentive
PUT   /incentive                                 controllers.IncentiveController.updateIncentive

GET     /review_question                                controllers.ReviewQuestionController.getReviewQuestion
DELETE /review_question                                controllers.ReviewQuestionController.deleteReviewQuestion(id: String)
POST   /review_question                                 controllers.ReviewQuestionController.addReviewQuestion
PUT   /review_question                                 controllers.ReviewQuestionController.updateReviewQuestion

GET     /info_question                                controllers.InfoQuestionController.getInfoQuestion
DELETE /info_question                                controllers.InfoQuestionController.deleteInfoQuestion(id: String)
POST   /info_question                                 controllers.InfoQuestionController.addInfoQuestion
PUT   /info_question                                 controllers.InfoQuestionController.updateInfoQuestion
