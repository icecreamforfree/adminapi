# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to use dependency injection

### PRODUCT API ###
#add products
POST   /products                    controllers.ProductControllerPsql.addProduct

#get all products
GET    /products                    controllers.ProductControllerPsql.getProduct        

#update by id
PUT     /products                    controllers.ProductControllerPsql.updateProduct

#delete by id
DELETE /products                      controllers.ProductControllerPsql.deleteProduct(id: String)

# get product review with product id
#GET    /productreviews                    controllers.ProductController.getProductReview  

# get product review only
#GET     /review                     controllers.ProductController.getReview(id: String)



