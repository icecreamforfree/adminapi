# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to use dependency injection

#PRODUCT#
#add products
POST   /firestore/products                  controllers.FirestoreProductController.addProduct
POST   /psql/products                       controllers.PsqlProductController.addProduct

#get all products
GET    /firestore/products                   controllers.FirestoreProductController.getProduct        
GET    /psql/products                       controllers.PsqlProductController.getProduct        

#update by id
PUT     /firestore/products                 controllers.FirestoreProductController.updateProduct
PUT     /psql/products                      controllers.PsqlProductController.updateProduct

#delete by id
DELETE /firestore/products                 controllers.FirestoreProductController.deleteProduct(id: String)
DELETE /psql/products                      controllers.PsqlProductController.deleteProduct(id: String)

#get product review only
GET     /firebase/review                     controllers.FirestoreProductController.getReview(id: String)

#USERQUESTION#
#add user question
POST   /firestore/user_question                  controllers.FirestoreUserQuestionController.addQuestion
POST   /psql/user_question                       controllers.PsqlUserQuestionController.addQuestion

#get all user quesiton
GET    /firestore/user_question                   controllers.FirestoreUserQuestionController.getQuestion        
GET    /psql/user_question                       controllers.PsqlUserQuestionController.getQuestion        

#update by id
PUT     /firestore/user_question                 controllers.FirestoreUserQuestionController.updateQuestion
PUT     /psql/user_question                      controllers.PsqlUserQuestionController.updateQuestion

#delete by id
DELETE /firestore/user_question                 controllers.FirestoreUserQuestionController.deleteQuestion(id: String)
DELETE /psql/user_question                      controllers.PsqlUserQuestionController.deleteQuestion(id: String)

#REVIEWQUESTION#
#add review question
POST   /firestore/review_question                  controllers.FirestoreReviewQuestionController.addQuestion
POST   /psql/review_question                       controllers.PsqlReviewQuestionController.addQuestion

#get all review quesiton
GET    /firestore/review_questionn                   controllers.FirestoreReviewQuestionController.getQuestion        
GET    /psql/review_question                       controllers.PsqlReviewQuestionController.getQuestion        

#update by id
PUT     /firestore/review_question                 controllers.FirestoreReviewQuestionController.updateQuestion
PUT     /psql/review_question                      controllers.PsqlReviewQuestionController.updateQuestion

#delete by id
DELETE /firestore/review_question                 controllers.FirestoreReviewQuestionController.deleteQuestion(id: String)
DELETE /psql/review_question                      controllers.PsqlReviewQuestionController.deleteQuestion(id: String)

